<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <!-- Group -->
    <LinearLayout
        android:id="@+id/linear_oa_frag1_generic_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="4dp">

        <!-- Label -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="16dp">

            <com.dataminersconsult.customfonts.TextViewStyleA
                android:id="@+id/label_oa_frag1_generic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Firstname"
                android:textColor="@color/Tex"
                android:textSize="@dimen/textsub"/>
        </LinearLayout>

        <!--EditText -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:baselineAligned="false"
            android:orientation="vertical"
            android:paddingTop="16dp">
            <com.dataminersconsult.customfonts.EditTextStyleA
                android:id="@+id/edittext_oa_frag1_generic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#00000000"
                android:maxLines="1"
                android:textColor="@color/Tex"
                android:textSize="@dimen/text"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/color_divider"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>